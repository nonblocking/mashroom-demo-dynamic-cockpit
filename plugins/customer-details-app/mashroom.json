{
    "$schema": "./../../node_modules/@mashroom/mashroom-json-schemas/schemas/mashroom-plugins.json",
    "devModeBuildScript": "build",
    "plugins": [
        {
            "name": "Mashroom Dynamic Cockpit Demo Customer Details App",
            "title": {
                "en": "Customer Details",
                "de": "Kunden Details"
            },
            "category": "Demo",
            "type": "portal-app",
            "bootstrap": "startCustomerDetailsApp",
            "resources": {
                "js": ["bundle.js"]
            },
            "defaultConfig": {
                "metaInfo": {
                    "viewType": "Details",
                    "displays": "Customer"
                },
                "resourcesRoot": "./dist",
                "restProxies": {
                    "backend": {
                        "targetUri": "http://localhost:5050/backend/api"
                    }
                },
                "appConfig": {
                    "customerId": null
                }
            }
        }
    ]
}
